          <div class="col-md-6 mt-1"><label class="labels">Locality</label><input type="text" name="locality"
              class="form-control" value="{{this.address.locality}}" /></div>
          <div class="col-md-6 mt-1"><label class="labels">House No./Building
              No.</label><input type="text" name="houseNumber" class="form-control"
              value="{{this.address.houseNumber}}" /></div>

          <div class="col-md-6 mt-1"><label class="labels">Area or Street
              Address</label><input type="text" name="streetAddress" class="form-control"
              value="{{this.address.streetAddress}}" /></div>

          <div class="col-md-6 mt-1"><label class="labels">District/Town</label><input type="text" name="district"
              class="form-control" value="{{this.address.district}}" /></div>
          <div class="col-md-6 mt-1"><label class="labels">State</label><input type="text" name="state"
              class="form-control" value="{{this.address.state}}" /></div>
         
                <div class="col-md-12 text-center mt-4">
            <button class="btn btn-primary btn-lg" type="submit" style="font-size: 13px;">Update Address</button>
          </div>

                <!-- Checkbox -->
              </form>
               {{/each}}
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
























