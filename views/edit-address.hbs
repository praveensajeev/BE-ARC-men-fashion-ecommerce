            </div>
            {{/if}}
                 

                 
              <div class="col-md-12">

              
            <div class="card-body bg-light">
              {{#each address}}
              <form action="/edit-address?id={{this.address.addressId}}" id="addAddressForm" method="post">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                   
          

          <div class="col-md-6"><label class="labels">Name</label><input type="text" name="name" class="form-control"
              value="{{this.address.name}}" /></div>
          <div class="col-md-6"><label class="labels">Mobile Number</label><input type="text" name="phone"
              id="phoneNumber" class="form-control" value="{{this.address.phone}}" /></div>
          <div class="col-md-6 mt-1"><label class="labels">Pincode</label><input type="text" name="pincode" id="pincode"
